<h1>Angular Portfolio Items</h1>

<%= link_to "Create New Item", new_portfolio_path %>

<% @angular_portfolio_item.each do |portfolio_items| %>
  <p><%= link_to portfolio_items.title, portfolio_show_path(portfolio_items.id) %></p>
  <p><%= portfolio_items.subtitle %></p>
  <p><%= portfolio_items.body %></p>
  <%= image_tag portfolio_items.thumb_image unless portfolio_items.thumb_image.nil? %>
  <br>
  <%= link_to "Edit", edit_portfolio_path(portfolio_items.id) %>
  <%= link_to 'Delete', portfolio_path(portfolio_items.id), method: :delete, data: { confirm: 'Are you sure?' } %>
  <hr>

<% end %>